---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import ProjectCard from '../components/ProjectCard.astro';
import ProjectModal from '../components/ProjectModal.astro';
import ExperienceTimeline from '../components/ExperienceTimeline.astro';
import ContactForm from '../components/ContactForm.astro';


const projects = [
  {
    id: "ecommerce",
    title: "E-commerce Platform",
    description: "A full-featured online store with payment processing and inventory management.",
    tags: ["React", "Node.js", "MongoDB", "Stripe"],
    images: ["/projects/ecommerce.jpg", "/projects/ecommerce.jpg", "/projects/ecommerce.jpg"],
    repositoryUrl: "https://github.com/username/ecommerce-project",
    siteUrl: "https://ecommerce-demo.com"
  },
  {
    id: "portfolio",
    title: "Portfolio Website",
    description: "Modern portfolio website built with Astro and Tailwind CSS.",
    tags: ["Astro", "Tailwind CSS", "JavaScript"],
    images: ["/projects/portfolio.jpg", "/projects/portfolio.jpg"],
    repositoryUrl: "https://github.com/username/portfolio",
    siteUrl: "https://portfolio-demo.com"
  },
  {
    id: "weather",
    title: "Weather App",
    description: "Real-time weather application with location detection and forecast.",
    tags: ["React", "Weather API", "Geolocation"],
    images: ["/projects/weather.jpg", "/projects/weather.jpg", "/projects/weather.jpg"],
    repositoryUrl: "https://github.com/username/weather-app",
    siteUrl: "https://weather-demo.com"
  },
  {
    id: "tasks",
    title: "Task Management App",
    description: "Collaborative task management system with real-time updates.",
    tags: ["Vue.js", "Firebase", "Tailwind CSS"],
    images: ["/projects/tasks.jpg", "/projects/tasks.jpg"],
    repositoryUrl: "https://github.com/username/task-manager",
    siteUrl: null
  },
  {
    id: "blog",
    title: "Blog Platform",
    description: "Content management system for writers and content creators.",
    tags: ["Next.js", "GraphQL", "PostgreSQL"],
    images: ["/projects/blog.jpg", "/projects/blog.jpg", "/projects/blog.jpg"],
    repositoryUrl: null,
    siteUrl: "https://blog-demo.com"
  },
  {
    id: "dashboard",
    title: "Social Media Dashboard",
    description: "Analytics dashboard for monitoring social media engagement.",
    tags: ["React", "D3.js", "Social APIs"],
    images: ["/projects/dashboard.jpg"],
    repositoryUrl: "https://github.com/username/social-dashboard",
    siteUrl: "https://dashboard-demo.com"
  }
];
---
<Layout>
    <main>
        <!-- Hero Section -->
        <section id="home" class="p-8 md:p-20 flex flex-col md:flex-row justify-center items-center bg-[url(/bakground-white.png)] bg-cover bg-center w-full min-h-[calc(100vh-72px)]">
            <div class="md:pr-10 max-w-full md:max-w-[50%] mb-8 md:mb-0">
                <Badge>Available for work</Badge>
                <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mt-4 mb-8 text-transparent bg-clip-text bg-gradient-to-r from-[rgb(47,76,121)] to-[rgb(200,35,55)]">Hey, I'm Sergio Florez</h1>
                <h2 class="text-lg md:text-xl text-balance">
                    <span class="text-[rgb(47,76,121)] font-semibold">Computer scientist</span> 
                    passionate about web development. 
                    <span class="text-[rgb(47,76,121)] font-semibold">Full-stack developer</span> 
                    with +2 years of experience building useful and stylish web apps. From Bogota, Colombia ðŸ‡¨ðŸ‡´.
                </h2>
                <div class="flex gap-4 mt-6">
                    <a href="#contact" class="inline-flex items-center justify-center gap-2 bg-[rgb(47,76,121)] text-white px-5 py-2 rounded-full hover:bg-[rgb(47,76,121)]/80 transition-all duration-300 transform hover:-translate-y-1 shadow-md hover:shadow-lg">
                        Contact Me
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </a>
                    <a href="#projects" class="inline-flex items-center justify-center gap-2 border-2 border-[rgb(47,76,121)] text-[rgb(47,76,121)] px-5 py-2 rounded-full hover:bg-[rgb(47,76,121)]/10 transition-all duration-300">
                        View Projects
                    </a>
                </div>
            </div>
            <div class="relative">
                <div class="absolute -inset-0.5 rounded-full opacity-75 blur"></div>
                <img class="relative ml-0 md:ml-6 min-w-80 min-h-80 w-64 h-64 rounded-full shadow-2xl object-cover" src="https://avatars.githubusercontent.com/u/110072366?v=4" alt="Sergio Florez" />
            </div>
        </section>
        <!-- Color Divider -->
        <div class="min-w-0 max-w-8xl w-full">     
            <div class="min-w-0 w-full bg-[rgb(200,35,55)] h-3"></div>
            <div class="min-w-0 w-full bg-[rgb(224,98,54)] h-3"></div>
            <div class="min-w-0 w-full bg-[rgb(215,171,97)] h-3"></div>
            <div class="min-w-0 w-full bg-[rgb(47,76,121)] h-3"></div>
        </div>

        <!-- Projects Section -->
        <section id="projects" class="flex flex-col p-8 md:p-20 justify-around bg-[url(/background-space-blue.jpg)] bg-cover bg-center w-full">
            <div class="flex gap-3 items-center mb-12">
                <img class="w-12 h-12 rounded-full text-white" src="/projects-icon.svg" alt="Projects" />
                <h2 class="text-2xl md:text-3xl font-bold text-white">My Projects</h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {projects.map((project) => (
                    <ProjectCard
                        id={project.id}
                        title={project.title}
                        description={project.description}
                        tags={project.tags}
                        images={project.images}
                        repositoryUrl={project.repositoryUrl}
                        siteUrl={project.siteUrl}
                    />
                ))}
            </div>
        </section>

        <!-- Color Divider -->
        <div class="min-w-0 max-w-8xl w-full">     
            <div class="min-w-0 w-full bg-[rgb(200,35,55)] h-3"></div>
            <div class="min-w-0 w-full bg-[rgb(224,98,54)] h-3"></div>
            <div class="min-w-0 w-full bg-[rgb(215,171,97)] h-3"></div>
            <div class="min-w-0 w-full bg-[rgb(47,76,121)] h-3"></div>
        </div>

        <!-- Experience Section -->
        <section  id="experience" class="flex flex-col p-20 bg-gray-100">
            <div class="flex gap-3 items-center mb-12">
                <img class="w-12 h-12 " src="/portfolio-icon.svg" alt="Experience" />
                <h2 class="text-2xl font-bold">Professional Experience</h2>
            </div>
            <ExperienceTimeline />
        </section>

        <!-- Color Divider -->
        <div class="min-w-0 max-w-8xl w-full">     
            <div class="min-w-0 w-full bg-[rgb(200,35,55)] h-3"></div>
            <div class="min-w-0 w-full bg-[rgb(224,98,54)] h-3"></div>
            <div class="min-w-0 w-full bg-[rgb(215,171,97)] h-3"></div>
            <div class="min-w-0 w-full bg-[rgb(47,76,121)] h-3"></div>
        </div>

        <!-- Contact Section -->
        <section id="contact" class="flex flex-col p-8 md:p-20 bg-gradient-to-br from-gray-100 to-gray-200">
            <div class="max-w-4xl mx-auto w-full">
                <div class="text-center mb-12">
                    <Badge>Get in Touch</Badge>
                    <h2 class="text-2xl md:text-3xl font-bold mt-4 mb-2">Contact Me</h2>
                    <p class="text-gray-700 max-w-lg mx-auto">
                        Have a project in mind or want to discuss potential opportunities? 
                        Send me a message and I'll get back to you as soon as possible.
                    </p>
                </div>
                <ContactForm />
            </div>
        </section>
        <!-- Footer -->
        <footer class="bg-[rgb(47,76,121)] text-white p-8 text-center">
            <div class="flex justify-center gap-6 mb-4">
                <a href="https://github.com/username" target="_blank" rel="noopener noreferrer" class="hover:text-gray-300 transition-colors p-2 rounded-full hover:bg-white/10">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github">
                        <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                    </svg>
                </a>
                <a href="https://linkedin.com/in/username" target="_blank" rel="noopener noreferrer" class="hover:text-gray-300 transition-colors p-2 rounded-full hover:bg-white/10">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-linkedin">
                        <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
                        <rect x="2" y="9" width="4" height="12"></rect>
                        <circle cx="4" cy="4" r="2"></circle>
                    </svg>
                </a>
                <a href="https://twitter.com/username" target="_blank" rel="noopener noreferrer" class="hover:text-gray-300 transition-colors p-2 rounded-full hover:bg-white/10">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter">
                        <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                    </svg>
                </a>
            </div>
            <p class="text-white/80">Â© {new Date().getFullYear()} Sergio Florez. All rights reserved.</p>
            
            <!-- Back to top button -->
            <a href="#home" class="fixed bottom-6 right-6 bg-[rgb(47,76,121)] p-3 rounded-full shadow-lg hover:bg-[rgb(47,76,121)]/80 transition-all duration-300 hover:-translate-y-1 group">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white transform group-hover:scale-110 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                </svg>
            </a>
        </footer>

        <!-- Project Modals -->
        {projects.map((project) => (
            <ProjectModal id={project.id} />
        ))}
    </main>
</Layout>